mixin profile-sidebar(data)
  .profile-sidebar
    .profile-sidebar-menu
      a(href="#" title="").profile-sidebar-menu__item._mylife My life
      a(href="#" title="").profile-sidebar-menu__item._edit Edit profile
      a(href="#" title="").profile-sidebar-menu__item._news My news
      a(href="#" title="").profile-sidebar-menu__item._events My events
      a(href="#" title="").profile-sidebar-menu__item._friends My friends
      a(href="#" title="").profile-sidebar-menu__item._messages Messages
        span 10
      a(href="#" title="").profile-sidebar-menu__item._notifications Notifications
      a(href="#" title="").profile-sidebar-menu__item._leaderboard Leaderboard
